<form method="post" action="{{ path('comments_delete', {'id': comment.id}) }}" onsubmit="return confirm('Вы действительно хотите удалить этот комментарий?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="button">Удалить комментарий</button>
</form>
